<Window x:Class="AntRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
        WindowState="Maximized" Closing="Window_Closing"
        xmlns:prop="clr-namespace:AntRunner.Properties"
        WindowStartupLocation="CenterScreen" BorderBrush="Transparent" BorderThickness="0"
        xmlns:shell="clr-namespace:Microsoft.Windows.Shell;assembly=Microsoft.Windows.Shell"
        Title="Antenna Runner 1.0" Height="455" Width="781">
    <shell:WindowChrome.WindowChrome>
        <shell:WindowChrome GlassFrameThickness="0"  ResizeBorderThickness="7.5" CaptionHeight="30" CornerRadius="3" />
    </shell:WindowChrome.WindowChrome>
    <Window.Resources>
        <XmlDataProvider x:Key="menudata" Source="menu.xml" XPath="MenuData/Operation"></XmlDataProvider>
    </Window.Resources>
    <Border BorderBrush="#FF0D483D" BorderThickness="7.5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Grid  Height="30" Background="#FF106455">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <Menu Margin="1,0,0,0" VerticalAlignment="Center" Foreground="White" Background="Transparent" FontWeight="Bold"
                      ItemsSource="{Binding Source={StaticResource menudata}}" MenuItem.Click="StackPanel_Click_1"
                      shell:WindowChrome.IsHitTestVisibleInChrome="True" HorizontalAlignment="Left">
                        <Menu.ItemTemplate>
                            <HierarchicalDataTemplate DataType="Operation" ItemsSource="{Binding XPath=Operation}">
                                <Label x:Name="lbl" Content="{Binding XPath=@Name}" Foreground="White"  Padding="0" Height="22"
                                       HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                            </HierarchicalDataTemplate>
                        </Menu.ItemTemplate>
                    </Menu>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal"  VerticalAlignment="Top">
                    <Border Height="28" Width="168" Padding="3" VerticalAlignment="Center" BorderBrush="LightGray" CornerRadius="0"  
                            BorderThickness="1">
                        <Border.Background>
                            <ImageBrush ImageSource="/AntRunner;component/0030110064.jpg" />
                        </Border.Background>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14"
                                   Foreground="White" FontWeight="Bold" FontFamily="Verdana">Antenna Runner 1.0</TextBlock>
                    </Border>
                    <Button BorderBrush="LightGray" BorderThickness="0" 
                            Height="30" Width="30" Margin="0" ToolTip="最大化" ToolTipService.InitialShowDelay="2000"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click_4">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Name="grid" Background="Transparent" BorderThickness="0" Margin="0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0" 
                                       Foreground="WhiteSmoke" Name="label1" Text="一" FontSize="14" FontWeight="Bold" >
                                    </TextBlock>
                                </Border>
                                <ControlTemplate.Triggers >
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="Transparent" To="WhiteSmoke" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="WhiteSmoke" To="Black" Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="Opacity" From="0.5" To="1" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="WhiteSmoke" To="Transparent" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="Black" To="WhiteSmoke" Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="grid" Property="BorderThickness" Value="3"></Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button BorderBrush="LightGray" BorderThickness="0" 
                            Height="30" Width="30" Margin="0" ToolTip="最大化" ToolTipService.InitialShowDelay="2000"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click_3">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Name="grid" Background="Transparent" BorderThickness="0" Margin="0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0" 
                                       Foreground="WhiteSmoke" Name="label1" Text="口" FontSize="12" FontWeight="Bold" >
                                    </TextBlock>
                                </Border>
                                <ControlTemplate.Triggers >
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="Opacity" From="1" To="0.5" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="Transparent" To="WhiteSmoke" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="WhiteSmoke" To="Black" Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="Opacity" From="0.5" To="1" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="WhiteSmoke" To="Transparent" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="Black" To="WhiteSmoke" Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="grid" Property="BorderThickness" Value="3"></Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button BorderBrush="LightGray" BorderThickness="0" 
                            Height="30" Width="30" Margin="0" ToolTip="关闭" ToolTipService.InitialShowDelay="2000"
                            shell:WindowChrome.IsHitTestVisibleInChrome="True" Click="Button_Click_2">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Name="grid" Background="Transparent" Opacity="0.95" BorderThickness="0" Margin="0">
                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0" 
                                       Foreground="Red" Name="label1" Text="×" FontSize="20" FontWeight="Bold" >
                                    </TextBlock>
                                </Border>
                                <ControlTemplate.Triggers >
                                    <EventTrigger RoutedEvent="MouseEnter">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="Transparent" To="Red" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="Red" To="White" Duration="0:0:0.4" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="MouseLeave">
                                        <BeginStoryboard >
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetName="grid" Storyboard.TargetProperty="(Grid.Background).(SolidColorBrush.Color)" From="Red" To="Transparent" Duration="0:0:0.4" />
                                                <ColorAnimation Storyboard.TargetName="label1" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="White" To="Red" Duration="0:0:0.4"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="grid" Property="BorderThickness" Value="3"></Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="259*" />
                    <RowDefinition Height="26" />
                </Grid.RowDefinitions>
                <xcad:DockingManager Name="dockManager" Background="Transparent" 
                         AllowMixedOrientation="True" Grid.Row="0">
                    <xcad:LayoutRoot x:Name="dockRoot">
                        <xcad:LayoutPanel x:Name="dockPanel" Orientation="Vertical">
                            <xcad:LayoutDocumentPaneGroup Orientation="Horizontal">
                                <xcad:LayoutDocumentPane>
                                    <xcad:LayoutDocument Title="端口 1  ( S11 )" CanFloat="False" CanClose="False">
                                        <Grid IsEnabled="{Binding Source={x:Static prop:Settings.Default}, Path=Para1.Enable}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="200*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Background="AliceBlue" Orientation="Horizontal" Grid.Row="1" Tag="1" Margin="0,2,0,0" VerticalAlignment="Center">
                                                <Button Name="btnStart1" Content="触发" Margin="0,0,5,0"  HorizontalAlignment="Left" VerticalAlignment="Center" Height="23"  Width="60" Click="Button_Click" />
                                                <TextBox VerticalContentAlignment="Center" Name="tb1" Width="Auto" MinWidth="120" IsReadOnly="True" Height="23" Text="90%"/>
                                                <Ellipse Height="15" Name="ellipse1" Stroke="Transparent"  Fill="Gray" Width="15" Margin="5,0"/>
                                                <TextBlock Name="blk1" VerticalAlignment="Center">就绪</TextBlock>
                                            </StackPanel>
                                            <RichTextBox Margin="0" Name="rtb1" IsReadOnly="True" IsDocumentEnabled="True" 
                                                 VerticalScrollBarVisibility="Auto">
                                                <RichTextBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Click="MenuItem_Click_6" Tag="1" Header="Clear"></MenuItem>
                                                    </ContextMenu>
                                                </RichTextBox.ContextMenu>
                                                <FlowDocument LineHeight="20">
                                                    <Paragraph Name="pgp1"></Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                            <Viewbox Name="vb1" MaxHeight="200" MinHeight="30" Opacity="0" IsHitTestVisible="False">
                                                <TextBlock Name="txt1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Foreground="SteelBlue">合格</TextBlock>
                                            </Viewbox>
                                        </Grid>
                                    </xcad:LayoutDocument>
                                </xcad:LayoutDocumentPane>
                                <xcad:LayoutDocumentPane>
                                    <xcad:LayoutDocument Title="端口 2  ( S22 )" CanFloat="False" CanClose="False">
                                        <Grid IsEnabled="{Binding Source={x:Static prop:Settings.Default}, Path=Para2.Enable}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="200*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel  Background="AliceBlue" Orientation="Horizontal" Grid.Row="1" Tag="2" Margin='0,2,0,0'>
                                                <Button Name="btnStart2"  Content="触发" Margin="0,0,5,0" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="60" Click="Button_Click" />
                                                <TextBox Name="tb2" Width="Auto" VerticalContentAlignment="Center" MinWidth="120" IsReadOnly="True" Height="23" Text="90%"/>
                                                <Ellipse Fill="Gray" Height="15" Name="ellipse2" Stroke="Transparent" Width="15" Margin="5,0"/>
                                                <TextBlock Name="blk2" VerticalAlignment="Center">就绪</TextBlock>
                                            </StackPanel>
                                            <RichTextBox Margin="0" Name="rtb2" IsReadOnly="True" IsDocumentEnabled="True"  VerticalScrollBarVisibility="Auto">
                                                <RichTextBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Click="MenuItem_Click_6" Tag="2" Header="Clear"></MenuItem>
                                                    </ContextMenu>
                                                </RichTextBox.ContextMenu>
                                                <FlowDocument LineHeight="20">
                                                    <Paragraph Name="pgp2"></Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                            <Viewbox Name="vb2"  MaxHeight="200" MinHeight="30"   Opacity="0" IsHitTestVisible="False">
                                                <TextBlock Name="txt2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Foreground="SteelBlue">合格</TextBlock>
                                            </Viewbox>
                                        </Grid>
                                    </xcad:LayoutDocument>
                                </xcad:LayoutDocumentPane>
                            </xcad:LayoutDocumentPaneGroup>
                            <xcad:LayoutDocumentPaneGroup Orientation="Horizontal">
                                <xcad:LayoutDocumentPane>
                                    <xcad:LayoutDocument Title="端口 3  ( S33 )" CanFloat="False" CanClose="False">
                                        <Grid IsEnabled="{Binding Source={x:Static prop:Settings.Default}, Path=Para3.Enable}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="200*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Background="AliceBlue" Orientation="Horizontal" Grid.Row="1" Tag="3" Margin="0,2,0,0">
                                                <Button Name="btnStart3"  Content="触发" Margin="0,0,5,0" Height="23"  HorizontalAlignment="Left" VerticalAlignment="Center"  Width="60" Click="Button_Click"/>
                                                <TextBox Name="tb3" Width="Auto" MinWidth="120" VerticalContentAlignment="Center" IsReadOnly="True" Height="23" Text="90%"/>
                                                <Ellipse Fill="Gray" Height="15" Name="ellipse3" Stroke="Transparent" Width="15" Margin="5,0"/>
                                                <TextBlock Name="blk3" VerticalAlignment="Center">就绪</TextBlock>
                                            </StackPanel>
                                            <RichTextBox Margin="0" Name="rtb3" IsReadOnly="True" IsDocumentEnabled="True"  VerticalScrollBarVisibility="Auto">
                                                <RichTextBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Click="MenuItem_Click_6" Tag="3" Header="Clear"></MenuItem>
                                                    </ContextMenu>
                                                </RichTextBox.ContextMenu>
                                                <FlowDocument LineHeight="20">
                                                    <Paragraph Name="pgp3"></Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                            <Viewbox Name="vb3" MaxHeight="200" MinHeight="30"  Opacity="0" IsHitTestVisible="False">
                                                <TextBlock Name="txt3" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Foreground="SteelBlue">合格</TextBlock>
                                            </Viewbox>
                                        </Grid>
                                    </xcad:LayoutDocument>
                                </xcad:LayoutDocumentPane>
                                <xcad:LayoutDocumentPane>
                                    <xcad:LayoutDocument Title="端口 4  ( S44 )" CanFloat="False" CanClose="False">
                                        <Grid IsEnabled="{Binding Source={x:Static prop:Settings.Default}, Path=Para4.Enable}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="200*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <StackPanel Background="AliceBlue" Orientation="Horizontal" Grid.Row="1" Tag="4" Margin="0,2,0,0">
                                                <Button  Name="btnStart4" Content="触发" Margin="0,0,5,0" Height="23" HorizontalAlignment="Left" VerticalAlignment="Center"  Width="60" Click="Button_Click"/>
                                                <TextBox Name="tb4" Width="Auto" VerticalContentAlignment="Center" MinWidth="120" IsReadOnly="True" Height="23" Text="90%"/>
                                                <Ellipse Fill="Gray" Height="15" Name="ellipse4" Stroke="Transparent" Width="15" Margin="5,0"/>
                                                <TextBlock Name="blk4" VerticalAlignment="Center">就绪</TextBlock>
                                            </StackPanel>
                                            <RichTextBox Margin="0" Name="rtb4" IsReadOnly="True" IsDocumentEnabled="True"  VerticalScrollBarVisibility="Auto">
                                                <RichTextBox.ContextMenu>
                                                    <ContextMenu>
                                                        <MenuItem Click="MenuItem_Click_6" Tag="4" Header="Clear"></MenuItem>
                                                    </ContextMenu>
                                                </RichTextBox.ContextMenu>
                                                <FlowDocument LineHeight="20">
                                                    <Paragraph Name="pgp4"></Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>
                                            <Viewbox Name="vb4" MaxHeight="200" MinHeight="30" Opacity="0"  IsHitTestVisible="False">
                                                <TextBlock Name="txt4" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="50" Foreground="SteelBlue">合格</TextBlock>
                                            </Viewbox>
                                        </Grid>
                                    </xcad:LayoutDocument>
                                </xcad:LayoutDocumentPane>
                            </xcad:LayoutDocumentPaneGroup>
                        </xcad:LayoutPanel>
                    </xcad:LayoutRoot>
                </xcad:DockingManager>
                <StatusBar Grid.Row="1" Margin="0,0,0,0" Padding="3,0,0,0" Name="statusBar1" Background="AliceBlue">
                    <StatusBar.Items>
                        <StatusBarItem Padding="0">
                            <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                <TextBlock VerticalAlignment="Center">总统计：</TextBlock>
                                <TextBox Name="tbAll"  VerticalContentAlignment="Center" Width="Auto" Margin="8.5,0,0,0"
                                         MinWidth="120" Height="23" Text="98/100 | 90%" IsReadOnly="True"></TextBox>
                                <Border Height="23" Margin="5,0,0,0" BorderBrush="SteelBlue" BorderThickness="1" Padding="5,0">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Source={x:Static prop:Settings.Default}, Path=Instrument}"></TextBlock>
                                </Border>
                                <Border Height="23" Margin="5,0,0,0" BorderBrush="SteelBlue" BorderThickness="1" Padding="5,0">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Source={x:Static prop:Settings.Default}, Path=TraceFormat}"></TextBlock>
                                </Border>
                                <Border Height="23" Margin="5,0,0,0" BorderBrush="SteelBlue" BorderThickness="1" Padding="5,0">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding Source={x:Static prop:Settings.Default}, Path=OutputDir}"></TextBlock>
                                </Border>
                            </StackPanel>
                        </StatusBarItem>
                        <StatusBarItem Padding="0" HorizontalAlignment="Right">
                            <Label Name="tipTime" HorizontalAlignment="Right" Height="20" Width="20"></Label>
                        </StatusBarItem>
                    </StatusBar.Items>
                </StatusBar>
            </Grid>
        </Grid>
    </Border>
</Window>
